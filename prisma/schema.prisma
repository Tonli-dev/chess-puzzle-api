generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Puzzle {
  id             String   @id @default(cuid())
  fen            String
  solution_moves String[]
  rating         Int
  themes         Theme[]  @relation("PuzzleThemes")
}

model Theme {
  id      Int      @id @default(autoincrement())
  slug    String   @unique
  name    String
  puzzles Puzzle[] @relation("PuzzleThemes")
}